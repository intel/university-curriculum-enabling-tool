# Frontend - Setup
HOST=localhost
PERSONA=faculty
PERSONA_VIEW=default

# Frontend - Payload CMS
DATABASE_URL="file:./database.db"
PAYLOAD_SECRET=

# Frontend - RAG
RAG_TEMPERATURE=0.1

# Embedding Models (provider-specific)
# Ollama: Use model:tag format
OLLAMA_EMBEDDING_MODEL=bge-m3:567m
# OVMS: Use HuggingFace model ID (e.g., BAAI/bge-base-en-v1.5, not OpenVINO/...)
# This will be the MediaPipe graph name after model export
OVMS_EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Chunking Parameters (shared across providers)
RAG_EMBEDDING_CHUNK_SIZE_TOKEN=200
RAG_EMBEDDING_CHUNK_OVERLAP_TOKEN=50

# Reranking Models (provider-specific)
# Ollama: Use model:tag format
OLLAMA_RERANKING_MODEL=llama3.2
# OVMS: Use HuggingFace model name or OpenVINO model ID
OVMS_RERANKING_MODEL=OpenVINO/bge-reranker-base-int8-ov

# Reranking Configuration
RAG_RERANKING_TOP_K=5

# Similarity Search Configuration
RAG_CONTEXT_SIMILARITY_THRESHOLD=0.7
RAG_CONTEXT_SIMILARITY_TOP_K=3

# Token Management
RAG_TOKEN_MAX=4096
RAG_TOKEN_RESPONSE_RATIO=0.6

# Frontend - Backend
FASTAPI_SERVER_URL="http://localhost:8016"
IMAGES_DIRECTORY="frontend/data/media"

# Frontend - AI Provider Configuration
# URL for Ollama/OVMS API server
PROVIDER_URL="http://localhost:5950"
